extends includes/_base.pug
block about__panel
	//關於我們＿＿標題
	.about__header
		.about__header__inner
			h1.papiin_heading01 關於我們
	//關於我們＿＿內容
	.about__body
		.about__body__inner
			//papiin是什麼
			section.about__whatis
				.section__inner
					div.papiin_logoimg
						img(class="" src="assets/images/img_whatis.jpg" alt="")
					div.about_sec_title.d-flex
						.title_text
							div.papiin_logo
								img(class="" src="assets/images/icon_plogo.svg" alt="")
							h2.papiin_heading02
								|是什麼？
						.title_img
							img(class="" src="assets/images/img_whatis.jpg" alt="")
					div.about_sec_content
						.papiin_chatlist
							//-AOS
							.papiin_chatitem.d-flex(data-aos="fade-right")
								.papiin_chatitem__inner.papiin_body1_bold
									|PaPiin 是台灣新創的影視作品平台
									br.d-none.d-md-block
									|獨家打造最適合影視從業人員的作品展示空間
								img(class="papiin_chattail" src="assets/images/icon_chattail_right.svg" alt="")
							//-AOS
							.papiin_chatitem.d-flex(data-aos="fade-left")
								img(class="papiin_chattail" src="assets/images/icon_chattail_left.svg" alt="")
								.papiin_chatitem__inner.papiin_body1_bold
									|PaPiin 致力於打造台灣最完整的影視資料庫與人才庫
							//-AOS
							.papiin_chatitem.d-flex(data-aos="fade-right")
								.papiin_chatitem__inner.papiin_body1_bold
									|你可以在 PaPiin 快速找到
									br.d-none.d-md-block
									|合作夥伴與工作機會，並掌握最新產業動態
								img(class="papiin_chattail" src="assets/images/icon_chattail_right.svg" alt="")

			//papiin營運數字
			section.about__num
				.section__inner
					div.about_sec_title
						h2.papiin_heading02.text-center
							|PaPiin 2021年底營運至今
							br
							|已累積超過...
					div.about_sec_content
						.papiin_numlist.d-sm-flex
							.papiin_numitem
								.numimg
									img(class="" src="assets/images/icon_num01.svg" alt="")
								.numtitle
									.papiin_heading01.text-center.js-counter
										|2000
								.numtext
									.papiin_body1_bold.text-center
										|部商案類型影視作品
							.papiin_numitem 
								.numimg
									img(class="" src="assets/images/icon_num02.svg" alt="")
								.numtitle
									.papiin_heading01.text-center.js-counter
										|600
								.numtext
									.papiin_body1_bold.text-center
										|部商案類型影視作品
							.papiin_numitem 
								.numimg
									img(class="" src="assets/images/icon_num03.svg" alt="")
								.numtitle
									.papiin_heading01.text-center.js-counter
										|110
								.numtext
									.papiin_body1_bold.text-center
										|部商案類型影視作品

			//如果你是
			section.about__identity
				include pages/_identity.pug
				
			//papiin平台願景
			section.about__vision
				.section__inner
					div.about_sec_title
						h2.papiin_heading02.text-center
							|PaPiin 平台願景
					div.about_sec_content
						div.vision_content.vision_content_now.d-flex
							//-AOS
							.visionlist.d-flex(data-aos="fade-right")
								.visionlist_content
									.visionlist_title.papiin_heading03
										|NOW
									ul.visionlist_text.papiin_body1_bold
										li 專屬影視幕後人員的作品展示平台。
										li 輕鬆建立屬於自己的作品集頁面。
										li 透過作品串連影視產業人脈資源。
								.visionlist_icon
									img(class="" src="assets/images/icon_visiontail_red.svg" alt="")
							.visionimg
								.visionimg_inner 
									img(class="" src="assets/images/img_vision_red.png" alt="")

						div.vision_content.vision_content_short.d-flex
							.visionimg
								.visionimg_inner 
									img(class="" src="assets/images/img_vision_blue.png" alt="")
							//-AOS
							.visionlist.d-flex(data-aos="fade-left")
								.visionlist_icon
									img(class="" src="assets/images/icon_visiontail_blue.svg" alt="")
								.visionlist_content
									.visionlist_title.papiin_heading03
										|短期目標
									ul.visionlist_text.papiin_body1_bold
										li 引入影像需求方在 PaPiin 上發案，開發專屬影視產業的一站式媒合系統。
										li 建立 PaPiin 線上社群，並舉辦線下小聚，促進影視產業內交流互動。

						div.vision_content.vision_content_long.d-flex
							//-AOS
							.visionlist.d-flex(data-aos="fade-right")
								.visionlist_content
									.visionlist_title.papiin_heading03
										|NOW
									ul.visionlist_text.papiin_body1_bold
										li 打造台灣最大的影視資料庫、人才庫。
										li 打造台灣影視產業幕後人員線上社群。
										li 打造專屬影視產業的一站式媒合平台。
								.visionlist_icon
									img(class="" src="assets/images/icon_visiontail_gray.svg" alt="")
							.visionimg
								.visionimg_inner
									img(class="" src="assets/images/img_vision_gray.png" alt="")
			//聯繫我們
			section.about__contact
				.contact_bg
				.section__inner
					div.about_sec_title
						h2.papiin_heading02.text-center
							|聯繫我們
					div.about_sec_content
						h3.papiin_body1_bold.text-center
							|若有合作想法或其他需求，歡迎聯繫我們的信箱，我們將盡快與您聯繫，感謝！
							br
							|PaPiin 聯絡信箱｜contact@papiin.com
						.papiin_sns
						.papiin_groupimg 
							img(class="" src="assets/images/img_contact_people.png" alt="")
	.about__footer